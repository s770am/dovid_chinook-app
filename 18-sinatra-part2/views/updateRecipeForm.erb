<h1>Update Recipe Form</h1>
<form action="/recipeUpdate/<%= @recipe.id %>" method="post">
  <div>
    <label for="name">Recipe Name:</label><br>
    <input type="text" name="name" id="name" value="<%= @recipe.name %>">
  </div>
  <div>
    <label for="prep_time">Prep Time:</label><br>
    <input type="number" name="prep_time" id="prep_time" value="<%= @recipe.prep_time %>">
  </div>
  <div>
    <label for="description">Description:</label><br>
    <input type="text" name="description" id="description" value="<%= @recipe.description %>">
  </div>
  <br>
  <input type="submit" value="Update my Recipe">
</form>
